FROM opensuse/leap:latest

ARG tclmajor=9.0
ARG tclminor=9.0.2

## TCL installation
COPY install/tcl9-x86_64-redhat-linux-rhel8-static-$tclminor            /install-tcl
COPY install/tcl9-x86_64-redhat-linux-rhel8-static-$tclminor/bin/*      /usr/local/bin
COPY install/tcl9-x86_64-redhat-linux-rhel8-static-$tclminor/lib/*      /usr/local/lib
COPY install/tcl9-x86_64-redhat-linux-rhel8-static-$tclminor/share/*    /usr/local/share
COPY install/tcl9-x86_64-redhat-linux-rhel8-static-$tclminor/include/*  /usr/local/include

## Add Packages
RUN zypper -n install rlwrap

## Add Default user
RUN  useradd -U -m tcl

WORKDIR /app
ENV RLWRAP_HOME=/tmp
ENTRYPOINT ["/usr/bin/rlwrap","tclsh9.0"]

USER tcl
